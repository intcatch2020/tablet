<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sensor_text_display_VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="VALUE"/>

    <TextView
        android:id="@+id/sensor_text_display_TYPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sensor_text_display_VALUE"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="TYPE"/>

    <TextView
        android:id="@+id/sensor_text_display_UNITS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sensor_text_display_TYPE"
        android:text="UNITS"/>
</RelativeLayout>