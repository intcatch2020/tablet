<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_holo_light">


    <TextView
        android:id="@+id/waypoint_index_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <TextView
        android:id="@+id/waypoint_latlong_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waypoint_index_textview"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <Button
        android:id="@+id/waypoint_move_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/waypoint_latlong_textview"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/expand"
        />
</RelativeLayout>